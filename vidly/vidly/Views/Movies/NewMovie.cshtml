@model vidly.ViewModels.NewMovieViewModel

@{
    ViewBag.Title = "NewMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>
@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.ReleaseDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.NumberInStock)
        @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.NumberInStock)
    </div>
    

    <div>
        @Html.LabelFor(m => m.Movie.GenreName)
        
        @Html.DropDownListFor(m => m.Movie.GenreName, new SelectList(Model.Genre), "Select", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.GenreName)
    </div>
    @Html.AntiForgeryToken()
    <button typeof="submit" class="btn btn-primary">Save</button>

}
@section scripts
    {
    @Scripts.Render("~/bundles/jqueryval")
   }
